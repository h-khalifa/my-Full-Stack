
@{
    ViewBag.Title = "Ex-O";
}


<div class="jumbotron">
    <h1 style="display:inline">Ex-O&nbsp;</h1>
    <h2 style="display:inline-block; margin-left:0px;">Exam Platform</h2>
    <p class="lead">
        Teachers can use our platform to make exams so that, thier students can apply to these exams using the exam code generated by Ex-O. and then the teachers can view statistics about thier exams and get info about applied students and thier scores.
    </p>
    <p><a href="/Home/About" class="btn btn-info btn-lg">About</a></p>
</div>

<div class="row">
    @*studentGuid*@
    <div class="col-md-offset-1 col-md-4 col-sm-offset-4 col-sm-8">

        <h3>Student?</h3>
        <p>
            Sign up or Log in to solve your Quiz or Exam
        </p>

        <a href="/User/Register" class="btn btn-default">Sign UP</a>
        <a href="/User/Login" class="btn btn-default">Login</a>

    </div>
    @*teacherGuid*@
    <div class="col-md-offset-2 col-md-4 col-sm-offset-8 col-sm-8">
        <h3>Teacher?</h3>
        <p>
            Sign up or Log in to set exams to your students
        </p>

        <a href="/User/Register" class="btn btn-default">Sign UP</a>
        <a href="/User/Login" class="btn btn-default">Login</a>
    </div>
</div>

