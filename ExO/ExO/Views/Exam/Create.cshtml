@model ExO.Models.Exam


<h2 class="text-center" style="margin-bottom:50px;" >Add An Exam</h2>
<form method="post" action="" class="form-horizontal col-md-offset-3 col-md-6 col-sm-12 ">
    <fieldset>
        <legend>Exam</legend>

        <p style=" margin:20px 0;">
            <b>Note</b> your exam is identified by it's code, your students can only access the test through the code.
            so, you have to provide them with it.
        </p>

        <div class="form-group">
            @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2 col-sm-4 " })
            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control col-md-4 col-sm-8", placeholder = "CS50" } })
            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger  col-md-4 col-sm-8 " })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 col-sm-4 " })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control  col-md-4 col-sm-8", placeholder = "Programming Quiz1" } })
        </div>

        <div class="form-group">
            <input type="submit" value="Start" class="btn btn-default col-sm-offset-4 " />
        </div>

    </fieldset>
</form>

<div class="clearfix"></div>