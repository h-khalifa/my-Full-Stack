@model ExO.Models.QuestionViewModel

<h2>@ViewBag.ExamName <span class="glyphicon glyphicon-pencil"></span></h2>

<div class="Question">

    <form method="post" action="" class="form-horizontal">
        <fieldset>
            <legend>Question<span class="badge">@Model.Q_num</legend>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @*<input type="hidden" value="@Model.ExamCode" name="" />*@
            @Html.HiddenFor(model => model.ExamCode)

            <div class="form-group">
                @Html.LabelFor(model => model.question, htmlAttributes: new { @class = "control-label " })<br />
                @Html.TextAreaFor(model => model.question, new { @class = "form-control", @rows = 3, @cols = 100 })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AnswerA, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.AnswerA, new { htmlAttributes = new { @class = "form-control", placeholder = "Answer" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AnswerB, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.AnswerB, new { htmlAttributes = new { @class = "form-control", placeholder = "Answer" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AnswerC, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.AnswerC, new { htmlAttributes = new { @class = "form-control", placeholder = "Answer" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AnswerD, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.AnswerD, new { htmlAttributes = new { @class = "form-control", placeholder = "Answer" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CorrectAnswer, htmlAttributes: new { @class = "control-label " })
                <select class="form-control" id="CorrectAnswer" name="CorrectAnswer">
                    <option>A</option>
                    <option>B</option>
                    <option>C</option>
                    <option>D</option>
                </select>
            </div>

            <input type="submit" value="Save" class="btn btn-primary" />
        </fieldset>
    </form>


</div>
<a class="btn btn-success" href="/exam/@Model.ExamCode/Finish">Finish Exam</a>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
