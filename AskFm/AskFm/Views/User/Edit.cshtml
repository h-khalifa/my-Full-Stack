            <label  class = "control-label col-md-2">Change your profile picturer</label>
            <div class="col-md-10">
                @Html.TextBox("StudentName", null, new {type = "file", accept = "image/*", name = "NewProfilePic", id= "NewProfilePic" , value="", @for = "NewProfilePic"})
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

